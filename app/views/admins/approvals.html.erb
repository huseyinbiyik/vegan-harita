<section class="pending">
  <h2>Kullanıcı Onayları</h2>

  <% @pending_users.each do |user| %>
    <article class="pending-user" id="user_<%= user.id %>">
      <ul class="pending-item">
        <li><span>Kullanıcı Adı: </span><%= user.email %></li>
        <li><span>Kullanıcı Numarası: </span><%= user.points %></li>
        <li>
          <%= link_to "Onayla", approve_user_path(user), method: "post", remote: true, data: { turbo_method: "post" } %>
        </li>
      </ul>
    </article>
  <% end %>
</section>

<section class="pending">
  <h2>Yeni Mekan Onayları</h2>

  <% @pending_places.each do |pending_place| %>
    <article class="pending-place" id="place_<%= pending_place.id %>">
      <ul class="pending-item">
        <li><span>Öneri Tarihi: </span><%= pending_place.created_at %></li>
        <li><span>Mekanın Adı: </span><%= pending_place.name %></li>
        <li><span>Adres: </span><%= pending_place.address %></li>
        <li style="height: 100%;">
          <% if pending_place.images.attached? %>
            <span>Eklenen Fotoğraflar:</span>
            <%= render partial: "shared/slider", locals: { images: pending_place.images } %>
          <% end %>
        </li>
        <li><span>Vegan mı? </span><%= pending_place.vegan %></li>
        <li><span>Etiketler: </span>
          <% pending_place.tag_ids.each do |tag_id| %>
            <%= Tag.find(tag_id).name %>
          <% end %>
        </li>
        <li><span>Instagram: </span><%= pending_place.instagram_url %></li>
        <li><span>Facebook: </span><%= pending_place.facebook_url %></li>
        <li><span>Twitter: </span><%= pending_place.twitter_url %></li>
        <li><span>Web Sitesi: </span><%= pending_place.web_url %></li>
        <li><span>E-posta: </span><%= pending_place.email %></li>
        <li><span>Telefon: </span><%= pending_place.phone %></li>
        <li><span>Ekleyen: </span><%= pending_place.creator.email %></li>
        <li>
          <%= link_to "Onayla", approve_place_path(id: pending_place.id), class: "approve-btn", method: "post", remote: true, data: { turbo_method: "post" } %>
          <%= link_to "Reddet", reject_place_path(id: pending_place.id), class: "reject-btn", method: "delete", remote: true, data: { turbo_method: "delete" } %>
        </li>
      </ul>
    </article>
  <% end %>
</section>

<section class="pending">
  <h2>Mekan Düzenleme Onayları</h2>

  <% @pending_place_edits.each do |place_edit| %>
    <article class="pending-edit", id="place_edit_<%= place_edit.id %>">
      <ul class="pending-item">
        <li><span>Öneri Tarihi: </span><%= place_edit.created_at %></li>
        <li><span>Mekanın Adı: </span><%= link_to "#{place_edit.changeable.name}", place_path(place_edit.changeable.id) %></li>
        <% if place_edit.name %>
        <li><span>Adı: </span><%= place_edit.changeable.name %> --> <%= place_edit.name %></li>
        <% end %>
        
        <% if place_edit.images.attached? %>
          <span>Eklenen Fotoğraflar:</span>
        <%= render partial: "shared/slider", locals: { images: place_edit.images, id: place_edit.id } %>
        <% end %>

        <% unless place_edit.deleted_images.nil? %>
          <span>Silinen Fotoğraflar:</span>
          <% place_edit.deleted_images.each do |image_id| %>
           <% image = ActiveStorage::Attachment.where(id: image_id).first %>
           <%= image_tag url_for(image) %>
          <% end %>
        <% end %>

        <% if place_edit.address %>
        <li><span>Adres: </span><%= place_edit.changeable.address %> <%= place_edit.address %></li>
        <% end %>
        <% if place_edit.vegan %>
        <li><span>Vegan mı? </span><%= place_edit.changeable.vegan %> <%= place_edit.vegan %></li>
        <% end %>
        <% if place_edit.instagram_url %>
        <li><span>Instagram: </span><%= place_edit.changeable.instagram_url %> <%= place_edit.instagram_url %></li>
        <% end %>
        <% if place_edit.facebook_url %>
        <li><span>Facebook: </span><%= place_edit.changeable.facebook_url %> <%= place_edit.facebook_url %></li>
        <% end %>
        <% if place_edit.twitter_url %>
        <li><span>Twitter: </span><%= place_edit.changeable.twitter_url %> <%= place_edit.twitter_url %></li>
        <% end %>
        <% if place_edit.web_url %>
        <li><span>Web Sitesi: </span><%= place_edit.changeable.web_url %> <%= place_edit.web_url %></li>
        <% end %>
        <% if place_edit.email %>
        <li><span>E-posta: </span><%= place_edit.changeable.email %> <%= place_edit.email %></li>
        <% end %>
        <% if place_edit.phone %>
        <li><span>Telefon: </span><%= place_edit.changeable.phone %> <%= place_edit.phone %></li>
        <% end %>
        <% if place_edit.tag_ids %>
        <li><span>Etiketler: </span>
          <%= place_edit.changeable.tag_ids.map { |tag_id| Tag.find(tag_id).name }.join(", ") %>
          <%= place_edit.tag_ids.map { |tag_id| Tag.find(tag_id).name }.join(", ") %>
        </li>
        <% end %>
        <li><span>Düzenleyen: </span><%= place_edit.user.email %></li>
        <li class="edit-buttons">
          <%= link_to "Onayla", approve_place_edit_path(id: place_edit.id), class: "approve-btn", method: "post", remote: true, data: { turbo_method: "post" } %>
          <%= link_to "Reddet", reject_place_edit_path(id: place_edit.id), class: "reject-btn", method: "delete", remote: true, data: { turbo_method: "delete" } %>
        </li>
      </ul>
    </article>
  <% end %>
</section>

<section class="pending">
  <h2>Menü Ekleme Onayları </h2>

  <% @pending_menus.each do |menu| %>
    <article class="pending-menu" id="menu_<%= menu.id %>">
      <ul class="pending-item">
        <li><span>Mekanın Adı: </span><%= link_to "#{menu.place.name}", place_path(menu.place.id) %></li>
        <li><span>Ürün Tanımı: <span><%= menu.description %></li>
        <% if menu.image.attached? %>
          <li><span>Ürün Fotoğrafı: </span></li>
          <%= image_tag menu.image %>
        <% end %>
        <li><span>Ürün Kategorisi: </span><%= menu.product_category %></li>
        <li><span>Fiyat: </span><%= menu.price %></li>
        <li><span>Ekleyen: </span><%= menu.creator.email %></li>
        <li>
          <%= link_to "Onayla", approve_menu_path(menu), method: "post", remote: true, data: { turbo_method: "post" } %>
          <%= link_to "Reddet", reject_menu_path(menu), method: "delete", remote: true, data: { turbo_method: "delete" } %>
        </li>
      </ul>
    </article>
  <%end%>
</section>


