<section class="user-forms">
  <h1><%= t :forgotPassword %></h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: {turbo: false} }, builder: CustomFormBuilder ) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :email, t('mail') %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: true %>
    </div>
    <div class="actions">
      <%= f.submit t('change_password'), id:"reset-button" %>
    </div>
  <% end %>
  <div class="session-links-container" id="reset-page-links">
    <%= render "devise/shared/links" %>
  </div>
</section>
