<h2 class="medium-weight black">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password", class: "black" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, class:"bg-beige", autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class: "black" %><br />
    <%= f.password_field :password_confirmation, class:"bg-beige", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit class:"bg-black" "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
