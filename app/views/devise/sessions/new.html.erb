<h2>Giriş Yap</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, 'E-posta' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "kullanici@mail.com"%>
  </div>

  <div class="field">
    <%= f.label :password, 'Parola' %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "******" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field remember">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Beni Hatırla' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Giriş Yap" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
