<%= turbo_frame_tag "place-name" do %>

  <%= form_with(model: @change_log, url: change_logs_path(@place), method: :post) do |form| %>

    <div class= "add-new-place-form-group">
      <%= form.label "Mekanın Adı", style: "display: block", class:"beige" %>
      <%= form.text_field :name, value: @place.name, placeholder: "X Vegan Cafe", class:"bg-beige, dark-green", required: true %>
    </div>

    <div class= "add-new-place-form-group">
      <%= form.submit "Gönder", class: "small-font bg-yellow dark-green" %>
    </div>

  <% end %>
<% end %>


