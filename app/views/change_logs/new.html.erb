<%= turbo_frame_tag "place-tags" do %>
  <%= form_with(model: @change_log, url: change_logs_path(@place), method: :post) do |form| %>
<div class="add-new-place-form-group tags-form-container " >
  <%= form.label "Etiketler", style: "display: block"%>
  <div class="tags-form">
  <% Tag.all.each do |tag| %>
    <label class="checkbox-inline">
      <%= form.check_box :tag_ids, { multiple: true, id: "tag-select", class: "small-font bg-beige dark-green" }, tag.id, nil %>
      <%= tag.name %>
    </label>
  <% end %>
    </div>
</div>
    <div class= "add-new-place-form-group">
    <%= form.submit "Gönder", class: "small-font bg-yellow dark-green" %>
  </div>
  <% end %>
<% end %>

<%= turbo_frame_tag "place-images" do %>
  <%= form_with(model: @change_log, url: change_logs_path(@place), method: :post) do |form| %>
  <% if @place.images.attached? %>
  <div class= "add-new-place-form-group">
    <%=  form.label "Silinecek Fotoğrafları Seç", style: "display: block", class:"beige" %>
    <% @place.images.each do |image| %>
      <div class="image-checkbox">
        <%= form.check_box :deleted_images, { multiple: true, id: "image-select", class: "small-font bg-beige dark-green" }, image.id, nil %>
        <%= image_tag image.variant(resize_to_limit: [100,100]), class: "image-checkbox-image" %>
      </div>
    <% end %>
  </div>
  <% end %>
    <div class= "add-new-place-form-group">
    <%= form.label "Mekanın Fotoğrafları", style: "display: block", class:"beige" %>
    <%= form.file_field :images, multiple: true, accept: "image/*" %>
  </div>
  </div>
    <div class= "add-new-place-form-group">
    <%= form.submit "Gönder", class: "small-font bg-yellow dark-green" %>
  </div>
    <% end %>
<% end %>
