<%= turbo_frame_tag "place-name" do %>

  <%= form_with(model: @change_log, url: create_place_edit_path(@place), method: :post, class: "modalize") do |form| %>
    <div class="inputs-wrapper">
      <div class="form-group">
        <%= form.label "Mekanın Adı" %>
        <%= form.text_field :name, value: @place.name, placeholder: "X Vegan Cafe", required: true, maxlength: 80, size: nil, autofocus: true, class: "modal-input" %>
      </div>

      <div class="form-buttons">
        <%= form.submit "Gönder", class:"primary-green-btn", data: { turbo_confirm: "Emin misiniz?" }  %>
        <a href="#" class="turbo-cancel-btn">İptal</a>
      </div>
    </div>

  <% end %>
<% end %>


<%= turbo_frame_tag "place-vegan" do %>
