<% end %>

<%= turbo_frame_tag "place-images" do %>
  <%= form_with(model: @change_log, url: create_place_edit_path(@place), method: :post) do |form| %>
    <div class= "add-new-photos">
      <%= form.label "Yeni Fotoğraflar Ekleyin" %>
      <%= form.file_field :images, multiple: true, accept: "image/*" %>
    </div>

    <% if @place.images.attached? %>
      <div class= "photo-select-form-container">
        <p>Silmek istediğiniz fotoğrafları seçin</p>
        <div class="select-images-container">
          <% @place.images.each do |image| %>
            <div class="image-checkbox">
              <%= form.check_box :deleted_images, { multiple: true }, image.id, nil %>
              <%= image_tag image.variant(resize_to_limit: [280,280]), class: "image-checkbox-image" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>


    <div class="form-buttons">
      <%= form.submit "Gönder", class:"primary-green-btn", data: { turbo_confirm: "Emin misiniz?" }  %>
      <a href="#" class="turbo-cancel-btn">İptal</a>
    </div>
  <% end %>
<% end %>
