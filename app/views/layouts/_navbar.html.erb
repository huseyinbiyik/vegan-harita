<header id="navbar">
  <%= link_to image_tag("logo.svg", alt: "Logo", id: "logo"), root_path %>
  <div id="search-container" data-controller="search">
    <%= render "places/search_form" %>
    <%= image_tag "search-icon.svg",
    data: {
      action: "click->search#toggle "
    },
    id: "search-icon" %>
  </div>
  <nav data-controller="navigation" data-navigation-state-value="false">
    <ul id="nav-menu" data-navigation-target="menu">
      <li class="nav-link">
        <% if user_signed_in? && current_user.role == "admin" %>
          <%= link_to approvals_path, class:"nav-admin-link" do %>
            <span><%= t :panel %></span>
          <% end %>
        <% end %>
      </li>
      <li class="nav-link">
        <%= link_to new_place_path, id:"add-place-link" do %>
          <%= image_tag "add-place.svg"%>
          <span><%= t :add_place %></span>
        <% end %>
      </li>
      <li class="nav-link">
        <%= link_to contact_path, id:"add-place-link" do %>
          <span><%= t :contact %></span>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li class="wrapper">
          <% if current_user.avatar.attached? %>
            <%= image_tag(current_user.avatar, id:"account-icon", height: "40px", width: "40px") %>
          <% else %>
            <%= image_tag "account-icon.svg", id:"account-icon" %>
          <% end %>
          <ul class="dropdown">
            <li>
              <%= link_to t('my_account'), edit_user_registration_path %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, id: "logout-link" do %>
                <%= image_tag "logout-icon.svg", id:"logout-icon" %>
                <span><%= t :logOut %></span>
              <% end %>
            </li>
          </ul>
        </li>
      <% else %>
        <li class="nav-link">
          <%= link_to new_user_session_path, id: "sign-in-link" do %>
            <%= t :logIn %>
          <% end %>
        </li>
      <% end %>
    </li>
  </ul>
  <button id="burger" class="mobile" data-action="click->navigation#toggle">
    <span></span>
    <span></span>
    <span></span>
  </button>
</nav>
</header>
