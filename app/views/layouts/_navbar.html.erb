<nav>
  <ul id="nav-menu">
    <% if user_signed_in? && current_user.place_owner? %>
      <li class="nav-link panel desktop">
        <%= link_to place_owner_summary_path(current_user.places.first.slug), class: "nav-admin-link" do %>
          <%= image_tag "owner-icon.png", class: "nav-icon" %>
          <span><%= t :business_panel %></span>
        <% end %>
      </li>
    <% end %>
    <% if user_signed_in? && current_user.role == "admin" %>
      <li class="nav-link panel">
        <%= link_to approvals_path, class: "nav-admin-link" do %>
          <%= image_tag "admin-icon.png", class: "nav-icon" %>
          <span><%= t :panel %></span>
        <% end %>
      </li>
    <% end %>
    <li class="nav-link">
      <%= link_to root_path do %>
        <%= image_tag "places-icon.png", class: "nav-icon" %>
        <span><%= t :place_index %></span>
      <% end %>
    </li>
    <li class="nav-link">
      <%# will be link to future products page %>
      <%= link_to root_path do %>
        <%= image_tag "product.png", class: "nav-icon" %>
        <span><%= t :product_index %></span>
      <% end %>
    </li>
    <li class="nav-link" id="add-place-wrapper" data-controller="place-link">
      <%= link_to new_place_path, id: "add-place-link" do %>
        <%= image_tag "add-place.svg", class: "nav-icon", id: "add-place-icon" %>
        <span><%= t :add_place %></span>
      <% end %>
    </li>
    <li class="nav-link">
      <%= link_to contact_path, data: { turbo: false } do %>
        <%= image_tag "contact-icon.svg", class: "nav-icon" %>
        <span><%= t :contact %></span>
      <% end %>
      </li>
    <% if user_signed_in? %>
      <li class="wrapper">
        <% if current_user.avatar.attached? %>
          <%= image_tag(cdn_proxy_url(current_user.avatar.variant(:thumb)), id: "account-icon", height: "40px", width: "40px") %>
        <% else %>
          <%= image_tag "account-icon.svg", class: "nav-icon hidden", id: "account-icon" %>
        <% end %>
        <ul class="dropdown">
          <li class= "nav-link">
            <%= link_to edit_user_registration_path do%>
            <% if current_user.avatar.attached? %>
              <%= image_tag(cdn_proxy_url(current_user.avatar.variant(:thumb)), class: "nav-icon") %>
            <% else %>
              <%= image_tag "account-icon.svg", class: "nav-icon" %>
            <% end %>
            <span> <%= t :my_account %> </span>
            <% end %>
          </li>
          <li class= "nav-link desktop">
            <%= link_to destroy_user_session_path, method: :delete, id: "logout-link" do %>
              <span><%= t :logOut %></span>
            <% end %>
          </li>
        </ul>
      </li>
    <% else %>
      <li class="nav-link">
        <%= link_to new_user_session_path do %>
          <%= image_tag "login-icon.svg", class: "nav-icon" %>
          <span><%= t :logIn %></span>
        <% end %>
      </li>
    <% end %>
    </li>
  </ul>
</nav>