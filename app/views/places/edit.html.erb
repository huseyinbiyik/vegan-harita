<%= turbo_frame_tag "place-location" do %>
  <%= form_with(model: @place, data: {controller: "place", action: "google-maps-callback@window->place#initializeMap"}, class: "modalize") do |form| %>

    <div id="modal-location-wrapper">
      <div class= "form-group">
        <%= form.label t('address') %>
        <%= form.text_field :address,  data: {place_target: "field", action: "keydown->place#preventSubmit"}, placeholder: "X Vegan Cafe, Kadıköy...", required: true, autofocus: true, id: "location-input" %>
        <div id="modal-map"  data-place-target="map"></div>
      </div>

      <%= form.hidden_field :latitude, data: {place_target: "latitude"} %>
      <%= form.hidden_field :longitude, data: {place_target: "longitude"}  %>

      <div class="form-buttons">
        <%= form.submit t('submit'), class:"primary-green-btn", data: { turbo_confirm: t('sure') }  %>
        <a href="#" class="turbo-cancel-btn"><%= t :nevermind %></a>
      </div>
    </div>
  <% end %>
<% end %>

