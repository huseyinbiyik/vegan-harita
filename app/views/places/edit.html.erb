<%= turbo_frame_tag "place-name" do %>

  <%= form_with(model: @place, class: "modalize") do |form| %>
    <div class="inputs-wrapper">
      <div class="form-group">
        <%= form.label t('name_of_place') %>
        <%= form.text_field :name, placeholder: "X Vegan Cafe", required: true, maxlength: 80, size: nil, autofocus: true, class: "modal-input" %>
      </div>

      <div class="form-buttons">
        <%= form.submit t('submit'), class:"primary-green-btn", data: { turbo_confirm: t('sure') }  %>
        <a href="#" class="turbo-cancel-btn"> <%= t :nevermind %> </a>
      </div>
    </div>

  <% end %>
<% end %>


