<%= form_with(model: place, data: {controller: "place"}) do |form| %>
  <% if place.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(place.errors.count, "error") %>
        şu sorundan dolayı gönderilemedi:</h2>

      <ul>
        <% place.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Yer Adı", style: "display: block" %>
    <%= form.text_field :name, placeholder: "X Vegan Cafe" %>
  </div>

  <div>
    <%= form.label "Adres", style: "display: block" %>
    <%= form.text_field :address, placeholder: "X Vegan Cafe, Kadıköy..." %>
  </div>

  <%= form.hidden_field :latitude %>
  <%= form.hidden_field :longitude %>

  <div>
    <%= form.label "Yerin Fotoğrafları", style: "display: block" %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div>
    <%= form.label "Bu işletme vegan mı yoksa vegan seçenekler mi sunuyor? ", style: "display: block" %>
    <%= form.select :vegan, options_for_select([["Vegan", true], ["Vegan Seçenekli", false]]) %>
  </div>

  <div>
    <%= form.label "Instagram Adresi", style: "display: block" %>
    <%= form.text_field :instagram_url, placeholder: "https://www.instagram.com/yeradi/" %>
  </div>

  <div>
    <%= form.label "Facebook Adresi", style: "display: block" %>
    <%= form.text_field :facebook_url, placeholder: "https://www.facebook.com/yeradi/" %>
  </div>

  <div>
    <%= form.label "Twitter Adresi", style: "display: block" %>
    <%= form.text_field :twitter_url, placeholder: "https://www.twitter.com/yeradi/" %>
  </div>

  <div>
    <%= form.label "Website Adresi", style: "display: block" %>
    <%= form.text_field :website_url, placeholder: "siteadresi.com" %>
  </div>

  <div>
    <%= form.label "Email Adresi", style: "display: block" %>
    <%= form.text_field :email, placeholder: "mail@mail.com"
     %>
  </div>

  <div>
    <%= form.label "Telefon", style: "display: block"%>
    <%= form.text_field :phone, pattern: "[0-9]{3}[0-9]{3}[0-9]{2}[0-9]{2}",  placeholder: "5XXXXXXXXX" %>
  </div>

  <div>
    <%= form.submit "Gönder" %>
  </div>
<% end %>
