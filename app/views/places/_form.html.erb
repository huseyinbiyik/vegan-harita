<%= form_with(model: place, data: {controller: "place", action: "google-maps-callback@window->place#initializeMap"}, html: {id: "add-new-place-form"}) do |form| %>
  <% if place.errors.any? %>
    <div style="color: red">
      <h2 class="medium-weight black"><%= pluralize(place.errors.count, "hata") %>
        şu sorundan dolayı arıza çıktı:</h2>

      <ul>
        <% place.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "add-new-place-form-group">
    <%= form.label "Adres", style: "display: block" %>
    <%= form.text_field :address,  data: {place_target: "field", action: "keydown->place#preventSubmit"}, placeholder: "X Vegan Cafe, Kadıköy...", required: true %>
  </div>

  <div id="map"  data-place-target="map"></div>


  <%= form.hidden_field :latitude, data: {place_target: "latitude"} %>
  <%= form.hidden_field :longitude, data: {place_target: "longitude"}  %>

  <div class= "add-new-place-form-group">
    <%= form.label "Mekanın Adı", style: "display: block", class:"beige" %>
    <%= form.text_field :name, placeholder: "X Vegan Cafe", class:"bg-beige, dark-green", required: true %>
  </div>



  <div class= "add-new-place-form-group">
    <%= form.label "Mekanın Fotoğrafları", style: "display: block", class:"beige" %>
    <%= form.file_field :images, multiple: true, accept: "image/*" %>
  </div>

  <div class= "add-new-place-form-group">
    <%= form.label "Bu işletme vegan mı yoksa sadece bazı vegan seçenekler mi sunuyor? ", style: "display: block", class:"beige" %>
    <%= form.select :vegan, options_for_select([["Vegan", true], ["Vegan Seçenekli", false]]), {}, class: "small-font bg-beige dark-green" %>
  </div>

<div class="add-new-place-form-group tags-form-container " >
  <%= form.label "Etiketler", style: "display: block"%>
  <div class="tags-form">
  <% Tag.all.each do |tag| %>
    <label class="checkbox-inline">
      <%= form.check_box :tag_ids, { multiple: true, id: "tag-select", class: "small-font bg-beige dark-green" }, tag.id, nil %>
      <%= tag.name %>
    </label>
  <% end %>
    </div>
</div>


  <div class= "add-new-place-form-group">
    <%= form.label "Instagram Adresi", style: "display: block", class:"beige" %>
    <%= form.text_field :instagram_url, placeholder: "https://www.instagram.com/yeradi/", class:"bg-beige dark-green" %>
  </div>

  <div class= "add-new-place-form-group">
    <%= form.label "Facebook Adresi", style: "display: block", class:"beige" %>
    <%= form.text_field :facebook_url, placeholder: "https://www.facebook.com/yeradi/", class:"bg-beige dark-green" %>
  </div>

  <div class= "add-new-place-form-group">
    <%= form.label "Twitter Adresi", style: "display: block", class:"beige" %>
    <%= form.text_field :twitter_url, placeholder: "https://www.twitter.com/yeradi/", class:"bg-beige dark-green" %>
  </div>

  <div class= "add-new-place-form-group">
    <%= form.label "Web site Adresi", style: "display: block", class:"beige" %>
    <%= form.text_field :web_url, placeholder: "siteadresi.com", class:"bg-beige dark-green" %>
  </div>

  <div class= "add-new-place-form-group">
    <%= form.label "Email Adresi", style: "display: block", class:"beige" %>
    <%= form.text_field :email, placeholder: "mail@mail.com", class:"bg-beige dark-green"
     %>
  </div>

  <div class= "add-new-place-form-group">
    <%= form.label "Telefon", style: "display: block", class:"beige" %>
    <%= form.text_field :phone, pattern: "[0-9]{3}[0-9]{3}[0-9]{2}[0-9]{2}",  placeholder: "5XXXXXXXXX", class:"bg-beige dark-green" %>
  </div>

  <div class= "add-new-place-form-group">
    <%= form.submit "Gönder", class: "small-font bg-yellow dark-green" %>
  </div>
<% end %>

