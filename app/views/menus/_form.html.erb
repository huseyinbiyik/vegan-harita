<%= form_with(model: [@place, @menu], url: place_menus_path, class: "menu-form") do |form| %>
  <% if menu.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>
      <ul>
        <% menu.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "İsim", style: "display: block" %>
    <%= form.text_field :name, placeholder: "Kuzey Kore Usulü Kızarmış Tofu", autofocus: true, required: true %>
  </div>

  <div class="form-group">
    <%= form.label "Tanım veya içerik", style: "display: block" %>
    <%= form.text_area :description, placeholder: "Tofu, soğan ve susam ve Kuzey Kore baharatları...", required: true %>
  </div>

  <div>
    <%= form.label "Görsel Seçin", style: "display: block" %>
    <%= form.file_field :image, accept: "image/*" %>
  </div>

  <div>
    <%= form.label "Ürün Kategorisi", style: "display: block" %>
    <%= form.select :product_category, Menu.product_categories.keys %>
  </div>

  <div>
    <%= form.label "Fiyat (₺)", style: "display: block" %>
    <%= form.number_field :price, placeholder: "33", step: 0.5, class:"menu-item-price-input" %>
  </div>

    <div class="form-buttons">
      <%= form.submit "Gönder", class:"primary-green-btn", data: { turbo_confirm: "Emin misiniz?" }  %>
      <a href="#" class="turbo-cancel-btn">İptal</a>
    </div>
<% end %>
