<div class="menu-item" id="<%= dom_id menu %>">
    <%= turbo_frame_tag "menu_edit_#{menu.id}" do  %>

  <div>
    <p class="name medium-font semi-bold brown">
      <%= menu.name %>
      <%= link_to "DÃ¼zenle", new_menu_edit_path(@place, menu), data: { turbo_frame: "menu_edit_#{menu.id}" }, class: "beige"%>
    </p>

    <p class="price medium-font medium-weight yellow">
      <%= menu.price %>
    </p>
  </div>

  <div>
    <% if menu.menu_images.attached? %>
      <% menu.menu_images.each do |image| %>
        <%= image_tag image, class: "menu-image" %>
      <% end %>
    <% end %>

    <p class="description medium-font yellow">
      <%= menu.description %>
    </p>
  </div>
  <% end %>
</div>
