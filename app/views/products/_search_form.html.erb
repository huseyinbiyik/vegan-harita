<div id="search-wrapper" data-controller="search" data-search-target="wrapper">
  <%= form_with id: "search-form", url: search_products_path, data: { controller: "helpers--auto-submit", "helpers--auto-submit-target": "form" }, method: :post, builder: CustomFormBuilder do |form| %>
    <%= inline_svg_tag "search-icon.svg", id: "search-icon" %>
    <%= form.search_field :product_search,
                          id: "search-field",
                          placeholder: true,
                          autocomplete: "off",
                          data: {
                            action: "input->helpers--auto-submit#submit",
                          } %>
  <% end %>
  <div id="search-results" data-search-target="results"></div>
</div>
