<div id="product-search-wrapper">
  <%= form_with id: "product-search-form", url: search_products_path, data: { controller: "helpers--auto-submit", "helpers--auto-submit-target": "form" }, method: :post do |form| %>
    <%= image_tag "search-icon.svg", id: "search-icon" %>
    <%= form.search_field :name_search,
                          id: "",
                          placeholder: true,
                          autocomplete: "off",
                          data: {
                            action: "input->helpers--auto-submit#submit",
                          } %>
  <% end %>
  <div id="search-results"></div>
</div>
