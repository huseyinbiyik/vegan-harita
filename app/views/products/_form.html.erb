<%= form_with(model: product, url: product.persisted? ? product_path(product.slug) : products_path, builder: CustomFormBuilder) do |form| %>
  <%= render 'shared/error_messages', object: product %>
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="form-group">
    <%= form.label :ingredients_tr %>
    <%= form.text_area :ingredients_tr %>
  </div>
  <div class="form-group">
    <%= form.label :ingredients_en %>
    <%= form.text_area :ingredients_en %>
  </div>
  <div class="form-group">
    <%= form.label :brand_id %>
    <%= form.collection_select :brand_id, Brand.order(:name), :id, :name %>
  </div>
  <div class="form-group">
    <%= form.label :shop_ids %>
    <%= form.collection_check_boxes :shop_ids, Shop.order(:name), :id, :name %>
  </div>
  <div class="form-group" data-controller="products--dependent-select">
    <%= form.collection_select :product_category_id, ProductCategory.order(:id), :id, :name, {},
        data: {
          action: "change->products--dependent-select#select",
          products__dependent_select_target: "category" } %>
  </div>
  <%= turbo_frame_tag "product_sub_category", src: product_sub_categories_path(category_id: @product.product_category ? @product.product_category.id : ProductCategory.first.id ) %>

  <div class="form-group">
    <%= form.label :statement %>
    <%= form.rich_text_area :statement %>
  </div>
  <div>
    <%= form.label :bar_code %>
    <%= form.text_field :bar_code %>
  </div>
  <%= form.submit %>
<% end %>
