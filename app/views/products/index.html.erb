<main id="product-index">
  <div id="product-search-container">
    <%= render "search_form" %>
    <%= link_to barcode_scanner_products_path, class:"mobile", id:"scanner" do %>
      <%= inline_svg_tag 'barcode-scanner.svg' %>
    <% end %>
  </div>

  <%= turbo_frame_tag "form", data: { turbo_action: "advance" } do %>
    <%= render "filter_form" %>
      <div id="products">
        <%= link_to "New product", new_product_path, data: { turbo_frame: "_top" }, class: "desktop", style: "display:none" %>
        <%= render @products %>
    </div>
    <%= paginate @products %>
  <% end %>


</main>
